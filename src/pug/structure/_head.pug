include ../mixins/mixins.pug

doctype html
html(lang='en')
    head
        meta(charset="UTF-8")
        if data.title
            title= data.title
        meta(name="viewport" content="width=device-width, user-scalable=yes")
        block head
        block style
        if data.styles
            each style in data.styles
                link(href=style rel="stylesheet")
        
    body
        +content
            block content
            .links
                if data.links
                    each link in data.links
                        a(href=link.link) #{link.name}